{

  "manifest_version": 2,
  "name": "page_reloader",
  "version": "1.0",

  "description": "Reloads local files every 2 seconds",
  "homepage_url": "https://github.com/k33theod/reloader",
  "icons": {
    "48": "icons/reload_48.png"
  },

   "content_scripts": [
    {
      "matches": ["file://*/*","http://localhost/*"],
      "js": ["reload.js"]
    }
  ]

}